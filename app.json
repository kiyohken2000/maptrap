{
  "expo": {
    "name": "Find Good One",
    "slug": "findgoodone",
    "privacy": "public",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo-sm.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 10000
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "net.votepurchase.fgo",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Use the photo library to change your avatar and treasure image",
        "NSLocationAlwaysUsageDescription": "Used to find placed treasures.",
        "NSLocationUsageDescription": "Used to set your treasure.",
        "NSLocationWhenInUseUsageDescription": "Used to set your treasure.",
        "UIBackgroundModes": [
          "location"
        ]
      }
    },
    "android": {
      "package": "net.votepurchase.fgo",
      "versionCode": 2,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "js",
        "jsx",
        "svg",
        "ts",
        "tsx"
      ]
    },
    "description": ""
  }
}
